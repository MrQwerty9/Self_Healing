<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_locus"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/backgroundItems"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    tools:targetApi="lollipop">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/transparent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/backgroundItem"
                app:cardCornerRadius="4dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_number_locus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/fontQuiz" />

                    <TextView
                        android:id="@+id/tv_quiz_locus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textColor="@color/fontQuiz" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <RadioGroup
                android:id="@+id/rg_locus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/backgroundItem"
                    app:cardCornerRadius="4dp"
                    android:layout_marginBottom="5dp">
                    <RadioButton
                        android:id="@+id/rb_locus_y"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ya" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/backgroundItem"
                    app:cardCornerRadius="4dp"
                    android:layout_marginBottom="5dp">
                    <RadioButton
                        android:id="@+id/rb_locus_n"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tidak" />
                </androidx.cardview.widget.CardView>
            </RadioGroup>
        </LinearLayout>
    </androidx.cardview.widget.CardView>